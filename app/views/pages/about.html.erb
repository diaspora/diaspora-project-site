      <h2><%= t 'pages.about.asp2' %></h2>
      <p><%= t 'pages.about.asp2_ex' %></p>
    </div>

    <div class="span-one-third">
      <h2><%= t 'pages.about.asp3' %></h2>
      <p><%= t 'pages.about.asp3_ex' %></p>
    </div>
  </div>

  <div id="features" class="page-header top_spacing">
    <h1>
      <%= t 'pages.about.features' %>
