  <div id="host" class="page-header top_spacing">
    <h1>
      <%= t 'pages.about.host' %>
      <small><%= t 'pages.about.host_byline' %></small>
    </h1>
  </div>

  <div class="row">
    <div class="span7">
      <%= image_tag "network-distributed.png", alt: "Network-distributed", size: "400x161" %>
