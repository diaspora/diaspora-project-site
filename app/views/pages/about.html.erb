    <div class='span4'><%= image_tag "reshare.png", alt: "Reshare" %></div>
    <div class='span4'><%= image_tag "mention.png", alt: "Mention" %></div>
    <div class='span4'><%= image_tag "heart.png", alt: "Heart" %></div>
  </div>

  <div class="row">
    <div class="span4">
      <h4><%= t 'pages.about.hashtags' %></h4>
      <p><%= t 'pages.about.hashtags_ex' %></p>
    </div>

    <div class="span4">
      <h4><%= t 'pages.about.reshare' %></h4>
      <p><%= t 'pages.about.reshare_ex' %></p>
