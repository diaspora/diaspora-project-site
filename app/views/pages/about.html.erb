<% content_for :page_title, t('pages.about.menu_title') %>
<% content_for :wrapper_class, "about_page" %>

<div class="hero" id="masthead">
  <div class="container">
    <div class="row">
      <h1><%= t 'pages.about.headline' %></h1>
      <h2 class="lead"><%= t 'pages.about.byline' %></h2>
      <br />
    </div>
  </div>
</div>

<div class="container">
  <div class="row top_spacing">
    <div class="span4">&nbsp;</div>
    <div class="span8">
      <h1><%= t 'pages.about.decentralize' %></h1>
      <p><%= t 'pages.about.decentralize_ex' %></p>
    </div>
    <div class="span4">&nbsp;</div>
  </div>

  <hr />

  <div class="row top_spacing">
    <div class="span8">
      <h2><%= t 'pages.about.this' %></h2>
    </div>
    <div class="span8">
      <h2><%= t 'pages.about.notthis' %></h2>
    </div>
  </div>

  <div class="row minor_top_spacing">
    <div class="span8">
      <%= image_tag "network-distributed.png", alt: "Network-distributed" %>
    </div>
    <div class="span8">
      <%= image_tag "network-centralized.png", alt: "Network-centralized" %>
    </div>
  </div>

  <div class="row minor_top_spacing">
    <div class="span8">
      <p><%= t 'pages.about.this_ex' %></p>
    </div>
    <div class="span8">
      <p><%= t 'pages.about.notthis_ex' %></p>
      <div id="connect"></div>
    </div>
    <p class="centre">
      <%= t 'pages.about.discl1' %>
      <a href="https://code.google.com/p/pubsubhubbub/" target="_blank">PubSubHubub</a>
      <%= t 'pages.about.discl2' %>
      <a href="http://webfinger.org/" target="_blank">Webfinger</a>
      <%= t 'pages.about.discl3' %>
    </p>
  </div>


  <div class="page-header top_spacing">
    <h1><%= t 'pages.about.connect' %><br /></h1>
    <p><%= t 'pages.about.connect_ex' %></p>
  </div>

  <div class="row minor_top_spacing">
    <div class="span2">
      <%= image_tag "search.png", alt: "Search" %>
    </div>
    <div class="span6">
      <h2><%= t 'pages.about.find' %></h2>
      <p><%= t 'pages.about.find_ex' %></p>
    </div>
    <div class="span2">
      <%= image_tag "plus.png", alt: "Add a contact" %>
    </div>
    <div class="span6">
      <h2><%= t 'pages.about.add' %></h2>
      <p><%= t 'pages.about.add_ex' %></p>
    </div>
  </div>

  <div id="freedom" class="page-header top_spacing">
    <h1><%= t 'pages.about.freedom' %>
      <small><%= t 'pages.about.freedom_byline' %></small>
    </h1>
  </div>
  <div class="row">
    <div class="span-one-third">
      <h2><%= t 'pages.about.fdm1' %></h2>
      <p><%= t 'pages.about.fdm1_ex' %></p>
    </div>
    <div class="span-one-third">
      <h2><%= t 'pages.about.fdm2' %></h2>
      <p><%= t 'pages.about.fdm2_ex' %></p>
    </div>
    <div class="span-one-third">
      <h2><%= t 'pages.about.fdm3' %></h2>
      <p><%= t 'pages.about.fdm3_ex' %></p>
      <p class="find_out_more">
        <%= link_to "Find out more &raquo;".html_safe, get_involved_path, class: "btn primary" %>
      </p>
    </div>
  </div>

  <div id="privacy" class="page-header top_spacing">
    <h1>
      <%= t 'pages.about.privacy' %>
      <small><%= t 'pages.about.privacy_byline' %></small>
    </h1>
  </div>
  <div class="row">
    <div class="span-one-third">
      <h2><%= t 'pages.about.priv1' %></h2>
      <p><%= t 'pages.about.priv1_ex' %></p>
    </div>
    <div class="span-one-third">
      <h2><%= t 'pages.about.priv2' %></h2>
      <p><%= t 'pages.about.priv2_ex' %></p>
      <p class="find_out_more">
        <a href="#host" class="btn primary">Find out more &raquo;</a>
      </p>
    </div>
    <div class="span-one-third">
      <h2><%= t 'pages.about.priv3' %></h2>
      <p><%= t 'pages.about.priv3_ex' %></p>
      <p class="find_out_more">
        <a href="#aspects" class="btn primary"> Find out more &raquo;</a>
      </p>
