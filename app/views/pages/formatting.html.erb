<% content_for :page_title, t('.menu_title') %>
<% content_for :wrapper_class, 'index-page' %>

<div id="masthead" class="hero">
  <div class="container">
    <h1><%= t 'pages.tutorials.headline' %></h1>
    <h2 class="lead"><%= t '.byline' %></h2>
  </div>
</div>

<div class="container">
  <div class="row minor-top-spacing">
    <div class="col-md-12">
      <p><%= t '.format1' %></p>
      <p><%= t '.format2' %></p>
      <p class="more-info">
        <%= t('.format3').html_safe %>
        <%= t('.format4').html_safe %>
      </p>

      <h3><%= t '.headings' %></h3>
      <p><%= t '.headings_ex1' %></p>
      <pre># <%= t '.headings_code1' %>

## <%= t '.headings_code2' %>

### <%= t '.headings_code3' %></pre>
      <p class="more-info"><%= t '.headings_ex2' %></p>

      <h3><%= t '.lists' %></h3>
      <p><%= t '.lists_ex1' %></p>
      <p><%= t '.lists_ex2' %></p>
      <p class="more-info"><%= t '.lists_ex3' %></p>
      <pre><%= t '.lists_code1' %>

* <%= t '.lists_item1' %>
* <%= t '.lists_item2' %>
* <%= t '.lists_item3' %>

<%= t '.lists_code2' %>

