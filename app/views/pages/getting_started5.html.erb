      <p><%= t '.publisher_ex3' %></p>
      <p><%= t('.publisher_ex4').html_safe %></p>
      <p><%= t '.buttons' %></p>
    </div>
  </div>

  <div class="row">
    <div class="col-md-8">
      <h5><%= t '.aspect_selector' %></h5>
      <p><%= t '.aspect_selector_ex1' %></p>
