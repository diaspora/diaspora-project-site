      <h5><%= t '.connected' %></h5>
      <p><%= t '.connected_ex1' %></p>
      <p><%= t '.connected_ex2' %></p>
      <p><%= t('.connected_ex3', part7_link: link_to(t('pages.tutorials.part7'), finishing_path)).html_safe %></p>

      <h5><%= t '.preview' %></h5>
      <p><%= t '.preview_ex1' %></p>
      <p class="more-info"><%= t '.preview_ex2' %></p>

      <h3><%= t '.features' %></h3>
      <h5><%= t '.tags' %></h5>
      <p><%= t '.tags_ex1' %></p>
      <p><%= t '.tags_ex2' %></p>
      <p class="more-info"><%= t('.tags_ex3', part7_link: link_to(t('pages.tutorials.part7'), finishing_path)).html_safe %></p>

      <h5><%= t '.mentions' %></h5>
      <p><%= t '.mentions_ex1' %></p>
      <p class="text-center"><%= image_tag 'pages/getting_started/sharing/mentions.png' %></p>
      <p><%= t '.mentions_ex2' %></p>
      <p class="more-info"><%= t '.mentions_ex3' %></p>

      <h5><%= t '.format' %></h5>
      <p><%= t('.format_ex', format_link: link_to(t('.format_link_text'), formatting_path)).html_safe %></p>

      <h5><%= t '.links' %></h5>
      <p><%= t('.links_ex').html_safe %></p>

      <h5><%= t '.embed' %></h5>
      <p><%= t '.embed_ex1' %></p>
      <p class="more-info"><%= t('.embed_ex2').html_safe %></p>
      <h5><%= t '.services' %></h5>
    </div>
  </div>

  <div class="row">
    <div class="col-md-8">
      <p><%= t '.services_ex1' %></p>
      <p><%= t '.services_ex2' %></p>
      <p><%= t '.services_ex3' %></p>
    </div>
    <div class="col-md-4">
      <p class="text-center"><%= image_tag 'pages/getting_started/sharing/connected_services.png' %></p>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <p><%= t '.how' %></p>
      <p><%= t '.try_out' %></p>
      <p><%= t('.make_post1').html_safe %></p>
      <blockquote><%= t '.make_post2' %></blockquote>
      <p class="more-info"><%= t '.make_post3' %></p>

      <h3><%= t '.interact' %></h3>
      <p><%= t '.interact_ex1' %></p>
