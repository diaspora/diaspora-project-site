<% content_for :page_title, t('.menu_title') %>
<% content_for :wrapper_class, 'index-page' %>

<div id="masthead" class="hero">
  <div class="container">
    <h1><%= t 'pages.tutorials.started_head' %></h1>
    <h2 class="lead"><%= t '.byline' %></h2>
  </div>
</div>

<div class="container">
  <div class="row minor-top-spacing">
    <div class="col-md-12">
      <p class="more-info"><%= t '.intro1' %></p>
      <p class="more-info"><%= t('.intro2', part6_link: link_to(t('pages.tutorials.part6'), conversations_url)).html_safe %></p>

      <h3><%= t '.publisher' %></h3>
      <p><%= t '.publisher_ex1' %></p>
      <p><%= t '.publisher_ex2' %></p>
