      <h5><%= t '.hide' %></h5>
      <p><%= t('.hide_ex').html_safe %></p>

      <h5><%= t '.ignore' %></h5>
      <p><%= t '.ignore_ex1' %></p>
      <p class="more-info"><%= t('.ignore_ex2', part7_link: link_to(t('pages.tutorials.part7'), finishing_path)).html_safe %></p>
      <p class="more-info"><%= t('.finish').html_safe %></p>

      <p class="text-center minor-top-spacing"><%= link_to t('pages.getting_started4.byline'), connecting_url %> | <%= link_to t('pages.getting_started6.byline'), conversations_url %></p>
    </div>
  </div>
